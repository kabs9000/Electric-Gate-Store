<!-- section/form_contact-with-text.liquid -->
{{ 'hdt-contact.css' | asset_url | stylesheet_tag }}
{%- style -%}#shopify-section-{{section.id}}{--section-pt:{{section.settings.padding_top}}px;--section-pb:{{section.settings.padding_bottom}}px;--section-prate:{{section.settings.padding_rate}}}{%- endstyle -%}
{%- liquid
  assign formID = 'contact-' | append: section.id
-%}
<div class="hdt-s-gradient hdt-section-spacing" color-scheme="{{ section.settings.color_scheme }}" hdt-reveal="fade-in">
  <div
    class="hdt-row-grid hdt-container {% if page.handle == 'contact' %} hdt-grid-cols-2 {% else %} hdt-grid-cols-1 {% endif %}  hdt-row-grid--modify hdt-justify-center {% if section.blocks.size == 0 %}hdt-text-center{% endif %}"
    style="--spacing-y:30px;"
  >
    {%- if section.blocks.size > 0 -%}
      <div class="hdt-content">
        {%- for block in section.blocks -%}
          {%- case block.type -%}
            {%- when 'heading' -%}
              {%- if block.settings.heading != blank -%}
                <h3 style="margin-bottom: 8px;" class="hdt-heading hdt-h5 hdt-s-text" hdt-reveal="slide-in" timeline>
                  {{ block.settings.heading }}
                </h3>
              {%- endif -%}
            {% when 'text' %}
              <div class="icon-with-text-main">
                {% if block.settings.iconsid %}
                  <div class="icons-block">
                    <img
                      src="{{ block.settings.iconsid | image_url }}"
                      alt="logo image"
                      class="contact-icons"
                      loading="lazy"
                      width=""
                      height=""
                      data-sizes="auto"
                      style=""
                    >
                  </div>
                {% endif %}
                {%- if block.settings.text != blank -%}
                  <div class="hdt-rte hdt-s-text2" hdt-reveal="slide-in" timeline>
                    {{ block.settings.text }}
                  </div>
                  </div>
                {%- endif -%}
            {% when 'socials' %}
              <div class="hdt-socials" hdt-reveal="slide-in" timeline>
                {% if block.settings.socialicon1 %}
                  <a href="{{ block.settings.url1 }}">
                    <img
                      src="{{ block.settings.socialicon1 | image_url }}"
                      alt="logo image"
                      class="contact-icons"
                      loading="lazy"
                      width=""
                      height=""
                      data-sizes="auto"
                      style=""
                    >
                  </a>
                {% endif %}
                {% if block.settings.socialicon2 %}
                  <a href="{{ block.settings.url2 }}">
                    <img
                      src="{{ block.settings.socialicon2 | image_url }}"
                      alt="logo image"
                      class="contact-icons"
                      loading="lazy"
                      width=""
                      height=""
                      data-sizes="auto"
                      style=""
                    >
                  </a>
                {% endif %}
                {% if block.settings.socialicon3 %}
                  <a href="{{ block.settings.url3 }}">
                    <img
                      src="{{ block.settings.socialicon3 | image_url }}"
                      alt="logo image"
                      class="contact-icons"
                      loading="lazy"
                      width=""
                      height=""
                      data-sizes="auto"
                      style=""
                    >
                  </a>
                {% endif %}
                {% if block.settings.socialicon4 %}
                  <a href="{{ block.settings.url4 }}">
                    <img
                      src="{{ block.settings.socialicon4 | image_url }}"
                      alt="logo image"
                      class="contact-icons"
                      loading="lazy"
                      width=""
                      height=""
                      data-sizes="auto"
                      style=""
                    >
                  </a>
                {% endif %}
              </div>
          {%- endcase -%}
        {%- endfor -%}
      </div>
    {%- endif -%}
    <div class="hdt-form_contact form_section">
      {%- if section.settings.heading != blank -%}
        <h3 style="color:#092333; margin-bottom: 24px;" class="hdt-heading hdt-h5 hdt-s-text" hdt-reveal="slide-in" timeline>
          {{ section.settings.heading }}
        </h3>
      {%- endif -%}
      {%- if section.settings.sub_heading != blank -%}
        <p class="hdt-s-text2 hdt-sub_heading" hdt-reveal="slide-in" timeline>
          {{ section.settings.sub_heading }}
        </p>
      {%- endif -%}
      <div class="hdt-form">
        {%- form 'contact', id: formID, class: 'hdt-contact_form_wrap' -%}
          <div class="hdt-input_group">
            <label class="contact-form-label">Full Name</label>
            <input
              id="form-name"
              name="contact[name]"
              type="text"
              class="hdt-input hdt-inline-flex hdt-f_name"
              required
              placeholder="Enter Full Name"
              hdt-reveal="slide-in"
              timeline
            >
              <label class="contact-form-label">Email Address</label>
            <input
              id="form-email"
              name="contact[email]"
              type="email"
              placeholder="Enter Email Address"
              class="hdt-input hdt-inline-flex hdt-f_email"
              required
              hdt-reveal="slide-in"
              timeline
            >
            <label class="contact-form-label">Phone Number</label>
            <input
              id="form-name"
              name="contact[name]"
              type="text"
              class="hdt-input hdt-inline-flex hdt-f_name"
              required
              placeholder="Enter Phone Number"
              hdt-reveal="slide-in"
              timeline
            >
            <label for="agree-terms">
              <input type="checkbox" id="agree-terms" class="hdt-input" name="contact[Agree_to_terms]" required>
              I Consent For My Data To Be Used As Per This Privacy Policy:<a href="{{ shop.url }}/pages/terms" target="_blank"></a> Click Here.
              </label>
            <textarea
              name="contact[message]"
              id="form-message"
              class="hdt-input hdt-f_message"
              placeholder="Price on Enquiry"
              hdt-reveal="slide-in"
              timeline
            ></textarea>
          </div>
          <!--
            <button type="submit" class="hdt-btn-contact hdt-btn-full_{{ section.settings.btn_full }} hdt-btn hdt-btn-solid hdt-inline-flex hdt-justify-center hdt-align-center hdt-relative" hdt-reveal="slide-in" timeline><span>{{ 'templates.contact.form.send' | t }}</span></button>
          -->
          <button
            type="submit"
            class="hdt-btn-contact hdt-btn-full_{{ section.settings.btn_full }} hdt-btn hdt-btn-solid hdt-inline-flex hdt-justify-center hdt-align-center hdt-relative"
            hdt-reveal="slide-in"
            timeline
          >
            <span>Send Message</span>
          </button>

          {%- if form.posted_successfully? -%}
            <div class="hdt-form-success hdt-form-response" hdt-reveal="slide-in" timeline>
              <p>{{ 'templates.contact.form.post_success' | t }}</p>
            </div>
          {%- elsif form.errors -%}
            <div class="hdt-form-error hdt-form-response" hdt-reveal="slide-in" timeline>
              <p>
                {{ 'templates.contact.form.error_heading' | t }}
                {{ form.errors | default_errors }}
              </p>
            </div>
          {%- endif -%}
        {%- endform -%}
      </div>
    </div>
  </div>
</div>
{% schema %}
{
  "name": "custom form with text",
  "tag": "section",
  "class": "hdt-section hdt-form-with_text custom-contantform-text",
  "disabled_on": {
    "groups": [
      "*"
    ]
  },
  "settings": [
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "t:sections.contact.color.label"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "t:sections.contact.form_with_text.heading.label",
      "default": "Get in Touch"
    },
    {
      "type": "textarea",
      "id": "sub_heading",
      "label": "t:sections.contact.form_with_text.sub_heading.label",
      "default": "If you’ve got great products your making or looking to work with us then drop us a line."
    },
    {
      "type": "checkbox",
      "id": "btn_full",
      "label": "t:sections.contact.form_with_text.btn_full",
      "default": false
    },
    {
      "type": "header",
      "content": "t:sections.all.padding.section_padding_heading"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_top",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "px",
      "label": "t:sections.all.padding.padding_bottom",
      "default": 40
    },
    {
      "type": "range",
      "id": "padding_rate",
      "min": 0,
      "max": 100,
      "step": 1,
      "unit": "%",
      "label": "t:sections.all.padding.padding_rate",
      "default": 75
    }
  ],
  "blocks": [
    {
      "type": "heading",
      "name": "t:sections.our-store.blocks.settings.heading",
      "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "t:sections.our-store.blocks.settings.heading",
          "default": "Ecomus"
        }
      ]
    },
    {
      "type": "text",
      "name": "t:sections.our-store.blocks.settings.text",
      "settings": [
        {
          "type":"image_picker",
          "id":"iconsid",
          "label": "Icon"
        },
        {
          "type": "html",
          "id": "text",
          "label": "t:sections.our-store.blocks.settings.text",
          "default": "<p><strong>Address</strong></p><p>66 Mott St, New York, New York, Zip Code: 10006, AS</p>"
        }
      ]
    },
    {
      "type": "socials",
      "name": "t:sections.our-store.blocks.settings.socials",
      "settings": [
       {
          "type":"image_picker",
          "id":"socialicon1",
          "label": "social icon 1"
        },
        {
          "type": "url",
          "id": "url1",
          "label": "icon1 url"
        },
        {
          "type":"image_picker",
          "id":"socialicon2",
          "label": "social icon 2"
        },
        {
          "type": "url",
          "id": "url2",
          "label": "icon2 url"
        },
        {
          "type":"image_picker",
          "id":"socialicon3",
          "label": "social icon 3"
        },
        {
          "type": "url",
          "id": "url3",
          "label": "icon3 url"
        },
        {
          "type":"image_picker",
          "id":"socialicon4",
          "label": "social icon 4"
        },
        {
          "type": "url",
          "id": "url4",
          "label": "icon4 url"
        },
        {
          "type": "select",
          "id": "socials_style",
          "label": "t:settings_schema.social-media.settings.social_style.label",
          "default": "simple",
          "options": [
            {
              "value": "default",
              "label": "t:settings_schema.social-media.settings.social_style.options__1.label"
            },
            {
              "value": "outline",
              "label": "t:settings_schema.social-media.settings.social_style.options__2.label"
            },
            {
              "value": "simple",
              "label": "t:settings_schema.social-media.settings.social_style.options__3.label"
            }
          ]
        },
        {
          "type": "select",
          "id": "socials_size",
          "label": "t:settings_schema.social-media.settings.social_size.label",
          "default": "large",
          "options": [
            {
              "value": "small",
              "label": "t:settings_schema.social-media.settings.social_size.options__1.label"
            },
            {
              "value": "medium",
              "label": "t:settings_schema.social-media.settings.social_size.options__2.label"
            },
            {
              "value": "large",
              "label": "t:settings_schema.social-media.settings.social_size.options__3.label"
            }
          ]
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "custom form with text"
    }
  ]
}
{% endschema %}
